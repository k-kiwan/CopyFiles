import pandas as pd
import numpy as np
import glob

all_data=pd.DataFrame()
for f in glob.glob(r'C:\Users\apoor965\Desktop\Share_Prices\test\*.xlsx'):
    df = pd.read_excel(f)
    all_data = all_data.append(df,ignore_index=True)
    
    
    
    
    
writer=pd.ExcelWriter(r'C:\Users\apoor965\Desktop\Share_Prices\test\collected_data.xlsx', engine='xlsxwriter')
all_data.to_excel(writer, sheet_name='Sheet1')
writer.save()
